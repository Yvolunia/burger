

 <div id="burger_image"> 
          <img width=200 height=150 src="/assets/images/burger.jpg">
          
</div>

<h1>Eat-Da-Burger!</h1>

<ol>
  {{#each burgers}}
    {{#unless devoured}}

<li>
  {{name}}

  <button class="change-devoured" data-id="{{id}}" data-newsleep="{{devoured}}">
    {{#if devoured}}{{/if}}
  </button>

  <button class="delete-cat" data-id="{{this.id}}">DELETE!</button>
</li>

    {{/unless}}
  {{/each}}
</ol>

<ul>

  {{#each burgers}}
    {{#if devoured}}
    {{/if}}
  {{/each}}
</ul>

<form class="create-form">

<div class="form-group">
<input type="text" id="ca" name="burger_name">
</div>

<button id="submit" type="submit">Submit</button>
</form>

<div id="comment">
   <p>Enter a burger that you want to eat. Click the "Submit" button.</p>
</div>
